<% include ./partials/header %>
<div class="ui main text container segment">
    <div class="ui huge header">Edit  <%= book.title %></div>
    <form class="ui form" action="/books/<%= book._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>Title</label>
            <input type="text" name="blog[title]" value="<%= book.title %>">
        </div>
        <div>
           <label>Author</label>
            <input type="text" name="blog[author]" value="<%= book.author %>">
       </div>
        <div class="field">
            <label>Image</label>
             <input type="text" name="blog[image]" value="<%= book.image %>">
        </div>
       <div class="field">
           <label>Body</label>
          <textarea name="blog[body]"><%= book.title %></textarea>
       </div>
      <input class="ui violet big basic button"type="submit">
    </form>
</div>
<% include ./partials/footer %>